@model IEnumerable<MVCEmployeeScheduler.Models.OffDay>

@{
    ViewBag.Title = "Off Days Manager";
}

<h2>Off Days</h2>
<p>
    @Html.ActionLink("Add Off Days", "Create")
</p>
<p>
    @Html.ActionLink("Manage Schedules", "../schedule/")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DateTimeFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimeTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTimeFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTimeTo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id}) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
